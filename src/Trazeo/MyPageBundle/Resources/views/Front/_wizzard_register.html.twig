<!--      Wizard container        -->

<div class="wizard-container">
    <form method="POST" action="{{ path('saveInGroup', {'group_id': group.id}) }}" validate>
        <div class="card wizard-card ct-wizard-blue2" id="wizard">

            <!--        You can switch "ct-wizard-orange"  with one of the next bright colors: "ct-wizard-blue", "ct-wizard-green", "ct-wizard-orange", "ct-wizard-red"             -->

            <div class="wizard-header">
                <h3>
                    <b>ALTA</b> COMPLETE SU REGISTRO<br>
                    <small>{{ group.name }}</small>
                </h3>
            </div>
            <ul>
                <li><a href="#register" data-toggle="tab">Registro</a></li>
                <li><a href="#yourdata" data-toggle="tab">Sus datos</a></li>
                <li><a href="#yourchildren" data-toggle="tab">Sus Niñ@s</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="register">
                    <div class="row">
                        <h4 class="info-text"> Introduzca su email y contraseña</h4>
                        <div class="col-sm-10 col-sm-offset-1">
                        {% form_theme form_user 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                        {{ form_widget(form_user) }}

                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="yourdata">
                    <h4 class="info-text"> Complete la información de su perfil</h4>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            {% form_theme form_userExtend 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {{ form_widget(form_userExtend) }}

                            <div class="row"><div class="col-md-12">
                                <input name="city" id="city" class="typeahead form-control" type="text" placeholder="Localidad" value="{% if app.user.userextend.city.nameUtf8 is defined %}{{ app.user.userextend.city.nameUtf8 }}{% endif %}">
                            </div></div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="yourchildren">
                    <h4 class="info-text"> Registra a los niños que participarán en el grupo</h4>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            {% form_theme form_children 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {{ form_widget(form_children) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="wizard-footer">
                <div class="pull-right">
                    <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Siguiente' />
                    <input type='submit' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Finalizar' />

                </div>
                <div class="pull-left">
                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Anterior' />
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </form>
</div> <!-- wizard container -->