<!--      Wizard container        -->

<div class="wizard-container">
    <a class="login-button-add-sopinet btn-fill btn btn-primary" href="{{ path('fos_user_security_login') }}">¿Ya tienes cuenta? Haz clic aquí</a>
    <form id="wizardForm" method="POST" action="{{ path('saveInGroup', {'group_id': group.id}) }}" validate>
        <div class="card wizard-card ct-wizard-blue" id="wizard">

            <!--        You can switch "ct-wizard-orange"  with one of the next bright colors: "ct-wizard-blue", "ct-wizard-green", "ct-wizard-orange", "ct-wizard-red"             -->

            <div class="wizard-header">
                <h3>
                    ESTÁS <b>REGISTRÁNDOTE</b> EN EL GRUPO<br>
                    <small>{{ group.name }}</small>
                </h3>
            </div>
            <ul>
                <li><a href="#register" data-toggle="tab">Registro</a></li>
                <li><a href="#yourdata" data-toggle="tab">Tus datos</a></li>
                <li><a href="#yourchildren" data-toggle="tab">Tus niñ@s</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="register">
                    <div class="row">
                        <h4 class="info-text"> Introduce tu email y una contraseña</h4>
                        <div class="col-sm-10 col-sm-offset-1">
                        {% form_theme form_user 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                        {{ form_widget(form_user) }}


                        <input required type="checkbox" name="condiciones" checked="checked" id="condiciones"/>
                            <label>Acepto las <a href="http://trazeo.es/condiciones-generales-de-uso/" target="_blank">condiciones</a> de Uso</label>

                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="yourdata">
                    <h4 class="info-text"> Completa la información de tu perfil</h4>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            {% form_theme form_userExtend 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {{ form_widget(form_userExtend) }}

                            <div class="row"><div class="col-md-12">
                                <input name="city" id="city" class="typeahead form-control" type="text" placeholder="Localidad" value="{% if group.city.nameUtf8 is defined %}{{ group.city.nameUtf8 }}{% endif %}">
                            </div></div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="yourchildren">
                    <h4 class="info-text"> Registra a los niños que participarán en el grupo</h4>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            {% form_theme form_children_0 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {% form_theme form_children_1 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {% form_theme form_children_2 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {% form_theme form_children_3 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {% form_theme form_children_4 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {{ form_widget(form_children_0) }}
                            <a href="#" id="activate_form_1" class="btn btn-primary">¿Quieres añadir más niños?</a>
                            <div id="form_child_1">
                            <hr/>
                                {{ form_widget(form_children_1) }}
                                <a href="#" id="activate_form_2" class="btn btn-primary">¿Quieres añadir más niños?</a>
                            </div>
                            <div id="form_child_2">
                                <hr/>
                                {{ form_widget(form_children_2) }}
                                <a href="#" id="activate_form_3" class="btn btn-primary">¿Quieres añadir más niños?</a>
                            </div>
                            <div id="form_child_3">
                                <hr/>
                                {{ form_widget(form_children_3) }}
                                <a href="#" id="activate_form_4" class="btn btn-primary">¿Quieres añadir más niños?</a>
                            </div>
                            <div id="form_child_4">
                                <hr/>
                                {{ form_widget(form_children_4) }}
                            </div>

                        </div>

                    </div>

                </div>
            </div>
            <div class="wizard-footer">
                <div class="pull-right">
                    <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Siguiente' />
                    <input type='submit' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Finalizar' />

                </div>
                <div class="pull-left">
                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Anterior' />
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </form>
</div> <!-- wizard container -->