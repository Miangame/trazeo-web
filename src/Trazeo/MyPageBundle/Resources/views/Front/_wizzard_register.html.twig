<!--      Wizard container        -->

<div class="wizard-container">
    <a class="login-button-add-sopinet btn-fill btn btn-primary" href="{{ path('fos_user_security_login') }}">{{ 'group_register.have_account'|trans }}</a>
    <form id="wizardForm" method="POST" action="{{ path('saveInGroup', {'group_id': group.id}) }}" validate>
        <div class="card wizard-card ct-wizard-blue" id="wizard">

            <!--        You can switch "ct-wizard-orange"  with one of the next bright colors: "ct-wizard-blue", "ct-wizard-green", "ct-wizard-orange", "ct-wizard-red"             -->

            <div class="wizard-header">
                <h3>
                    {{ 'group_register.title'|trans|raw }}
                    <small>{{ group.name }}</small>
                </h3>
            </div>
            <ul>
                <li><a href="#register" data-toggle="tab">{{ 'group_register.register'|trans }}</a></li>
                <li><a href="#yourdata" data-toggle="tab">{{ 'group_register.data'|trans }}</a></li>
                <li><a href="#yourchildren" data-toggle="tab">{{ 'group_register.children'|trans }}</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="register">
                    <div class="row">
                        <h4 class="info-text"> {{ 'group_register.email'|trans }}</h4>
                        <div class="col-sm-10 col-sm-offset-1">
                        {% form_theme form_user 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                        {{ form_widget(form_user) }}


                        <input required type="checkbox" name="condiciones" checked="checked" id="condiciones"/>
                            <label>{{ 'group_register.accept'|trans }} <a href="http://trazeo.es/condiciones-generales-de-uso/" target="_blank">{{ 'group_register.conditions'|trans }}</a> {{ 'group_register.use'|trans }}</label>

                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="yourdata">
                    <h4 class="info-text"> {{ 'group_register.profile'|trans }}</h4>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            {% form_theme form_userExtend 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {{ form_widget(form_userExtend) }}

                            <div class="row"><div class="col-md-12">
                                <input name="city" id="city" class="typeahead form-control" type="text" placeholder="{{ 'group_register.locale'|trans }}" value="{% if group.city.nameUtf8 is defined %}{{ group.city.nameUtf8 }}{% endif %}">
                            </div></div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="yourchildren">
                    <h4 class="info-text"> {{ 'group_register.register_children'|trans }}</h4>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            {% form_theme form_children_0 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {% form_theme form_children_1 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {% form_theme form_children_2 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {% form_theme form_children_3 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {% form_theme form_children_4 'TrazeoMyPageBundle:Form:bootstrap.12.html.twig' %}
                            {{ form_widget(form_children_0) }}
                            <a href="#" id="activate_form_1" class="btn btn-primary"></a>
                            <div id="form_child_1">
                            <hr/>
                                {{ form_widget(form_children_1) }}
                                <a href="#" id="activate_form_2" class="btn btn-primary">{{ 'group_register.add_children'|trans }}</a>
                            </div>
                            <div id="form_child_2">
                                <hr/>
                                {{ form_widget(form_children_2) }}
                                <a href="#" id="activate_form_3" class="btn btn-primary">{{ 'group_register.add_children'|trans }}</a>
                            </div>
                            <div id="form_child_3">
                                <hr/>
                                {{ form_widget(form_children_3) }}
                                <a href="#" id="activate_form_4" class="btn btn-primary">{{ 'group_register.add_children'|trans }}</a>
                            </div>
                            <div id="form_child_4">
                                <hr/>
                                {{ form_widget(form_children_4) }}
                            </div>

                        </div>

                    </div>

                </div>
            </div>
            <div class="wizard-footer">
                <div class="pull-right">
                    <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='{{ 'group_register.next'|trans }}' />
                    <input type='submit' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='{{ 'group_register.finish'|trans }}' />

                </div>
                <div class="pull-left">
                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='{{ 'group_register.previous'|trans }}' />
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </form>
</div> <!-- wizard container -->