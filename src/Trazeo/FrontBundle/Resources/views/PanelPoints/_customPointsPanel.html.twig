<!-- START pointsResume -->
<div class="col-md-12 resumePoints" id="points">
	{% if user.points > 0 %}
	<div class="row">
		<div class="pull-left">
			<h1>
				<span class="alert"><i class="fa fa-trophy"></i> {{ 'Points.mine'|trans }}</span>
				</span>
			</h1>
		</div>
	</div>
	{% set alert_type = 'alert-warning' %}
	{% else %}
	{% set alert_type = 'alert-success' %}
	{% endif %}
	<div class="row {{alert_type}}">
		<div class="col-md-6">
			<i class="fa fa-user fa-5x pull-left"></i>
			<h3>
			{{ user.name }}
			&nbsp;&nbsp;
			</h3>
		</div>
		<div class="pull-right"><br/>
			<a class="btn btn-warning" {#href="{{ path('panel_points') }}"#}>
				<i class="fa fa-trophy "></i>&nbsp; {{ user.points}} &nbsp; {{ 'User.points'|trans }}
			</a>&nbsp;		
		</div>
	</div>
</div>

<!-- END pointsResume -->