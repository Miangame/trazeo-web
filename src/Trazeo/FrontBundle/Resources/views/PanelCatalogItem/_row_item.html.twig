<div class="row alert alert-warning">
	<!-- item title -->
	<div class="col-md-5">
        	{{ item.company~': '~item.title }}
	</div>
	<!-- Admin options -->
	<div class="col-md-2">
		<a class="btn btn-xs btn-default" href="{{ path('panel_catalogitems_edit', {'id': item.id}) }}"><i class="fa fa-pencil"></i>&nbsp; {{ 'Options.edit'|trans }}</a>
		<a class="btn btn-xs btn-default" style="cursor:pointer;" data-btnCancelLabel='{{ 'Confirmation.no'|trans }}' data-btnOkLabel='{{ 'Confirmation.yes'|trans }}' data-href="{{ path('panel_catalogitem_delete', {'id': item.id }) }}" data-toggle="confirmation" data-title='{{ 'Confirmation.question'|trans }}'><i class="fa fa-trash-o"></i>&nbsp; {{ 'Options.delete'|trans }}</a>
	</div>
</div>