				<li>Niños: apuntados en esta ruta</li>
				
				<li>Autor:</li>
			</ul>
		</div>

		<h1>MAPA</h1>
		<div id="mapa" class="col-md-12"></div>
		
        <script type="text/javascript">
        var lastRoute="{{ path('panel_ride_last', {'id': ride.id}) }}";

    	</script>
{% endblock %}
		
	
{% block js %}	
	{{ parent() }}
	{% javascripts 
		'@SopinetOpenMapBundle/Resources/public/js/leaflet.js'
