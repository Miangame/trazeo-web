{% extends 'TrazeoFrontBundle:Public:base.html.twig' %}

{% block body_content %}


<section class="featured">
	<div class="container"> 
		<div class="row mar-bot40">
			<div class="col-md-12">
				<div class="align-center">
					<div class="row">
						<div class="col-md-6">
							<h2 class="slogan">¿Qué es Trazeo?</h2>
							<div class="videowrapper">
								<iframe src="//www.youtube.com/embed/fWptLnpRGig" frameborder="0" allowfullscreen></iframe>
							</div>
						</div>
						<div class="col-md-6">
							<h2 class="slogan">¿Quieres probarlo?</h2>
							<h4 style="color: #FFF">Sé el primero en probar Trazeo, mándanos tu correo electrónico y te añadiremos a la lista de usuarios que podrán probar el sistema en cuanto esté listo.</h4>
							<div class="cform" id="contact-form">
							<form action="{{ path('prev_registro') }}" method="POST" role="form">
								<input type="email" required class="form-control" name="email" id="email" placeholder="Correo electrónico" data-rule="email" data-msg="Please enter a valid email">
							    <button type="submit" class="btn btn-lg btn-theme">Enviar</button>
							</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<hr/>
		<h2 class="slogan">Gracias a...</h2>
		<div class="row">
		    <div id="myCarousel" class="carousel slide" data-ride="carousel">
		      <!-- Indicators -->
		      <ol class="carousel-indicators">
		      	{% set i = 0 %}
		      	{% for banner in banners %}
		      		<li data-target="#myCarousel" data-slide-to="{{ i }}" {% if i == 0 %}class="active"{% endif %}></li>
		      		{% set i = i+1 %}
		      	{% endfor %}
		      </ol>
		      <div class="carousel-inner">
		      	{% set i = 0 %}
		      	{% for banner in banners %}
			        <div class="item{% if i == 0 %} active{% endif %}">
			        {% set i = i + 1 %}
			          <img src="{{ banner.url }}" alt="{{ banner.title }}" heigth="100px">
			          <div class="container">
			            <div class="carousel-caption">
			              <h1>{{ banner.title }}</h1>
			              <p>{{ banner.desc }}</p>
			            </div>
			          </div>
			        </div>
				{% endfor %}
		      </div>
		      <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
		      <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
		    </div><!-- /.carousel -->			
		</div>
	</div>
</section>



{% endblock %}

{% block js %}
	{{ parent() }}
	{% include 'TrazeoFrontBundle:Panel:flashmessage.html.twig' %}
{% endblock %}