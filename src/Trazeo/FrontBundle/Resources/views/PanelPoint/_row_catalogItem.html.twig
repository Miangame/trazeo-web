{% set file_path = asset(ofert.url) %}

	<span class="col-md-4 col-xs-12 col-sm-4 col-lg-4 img-responsive row-offset-min" {% if ofert.citys is not null%}data-city="{{ ofert.citys.nameUtf8 }}" {% if city is not null and city.id != ofert.citys.id %}style=" display: none;"{% endif %}{% endif %} %}>
		<div class="catalogItem" style="background-image: url({{ file_path }}),-webkit-linear-gradient(top, #ffffff, #ffffff 60%, #cedcab 40%, #cedcab);
    background-image: url({{ file_path }}),-moz-linear-gradient(top, #ffffff, #ffffff 60%, #cedcab 40%, #cedcab);
    background-image: url({{ file_path }}),-ms-linear-gradient(top, #ffffff, #ffffff 60%,  #cedcab 40%, #cedcab);
    background-image: url({{ file_path }}),-o-linear-gradient(top, #ffffff, #ffffff 60%, #cedcab 40%, #cedcab);
    background-image: url({{ file_path }}),linear-gradient(top, #ffffff, #ffffff 60%, #cedcab 40%, #cedcab);">
			<div class="circle col-md-3  col-xs-3  col-sm-3  col-lg-3 col-xs-offset-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
				<span class="catalog-item-points2">{{ofert.points}}</span>
			</br>
				<span><p class="catalog-item-points ">Puntos</p></span>
			</div>
			<div class="catalog-item-title col-md-10 ">
				{{ofert.title}}
			</div>
			<div class="catalog-item-description col-md-10 hidden-xs hidden-sm">
				{{ofert.description}}
			</div>
		</div>
		{%if ofert.points!=0%}
		<a class="btn btn-success exchange" style="margin-top:5px;margin-left:5%" href="{{ path('panel_point_exchange', { 'id': ofert.id}) }}" data-offert='tiitle.ofert'>
			<i class="fa fa-plus-circle"></i>&nbsp; {{ "Exchange.button.exchange"|trans}}
		</a>	
		{%endif %}
		{% if ofert.link is not null %}
		<a {%if ofert.points==0%}class="btn btn-success exchange col-md-offset-3" {%else%}class="btn btn-success"{%endif%} style="margin-top:5px" href="{{ofert.link}}" data-offert="{{ofert.title}}">
			<i class="fa fa-plus-circle"></i>&nbsp; {{ "Exchange.button.moreinfo"|trans}}
		</a>
		{% endif %}
	</span>