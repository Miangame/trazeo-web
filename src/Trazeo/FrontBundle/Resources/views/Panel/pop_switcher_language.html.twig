<a data-toggle="dropdown" class="dropdown-toggle" href="#">
	{#<img src="{{ asset("bundles/sopinettemplateace/images/flags/"~current_locale~".png")}}"/>#}
	<i class="fa fa-picture fa-3x"></i>
	{#<span class="badge badge-important">{{ notifications|length }}</span>#}
</a>

<ul class="pull-right dropdown-navbar dropdown-menu dropdown-caret dropdown-closer">
	{% for locale in locales %}
	<li{% if current_locale == locale.locale %} class="locale_current"{% endif %}>
		<a href="{{ locale.link }}">
			<div class="clearfix">
				<span class="pull-left">{{ locale.locale_current_language }}</span>
				{#<span class="pull-right"><img src="{{ asset("bundles/sopinettemplateace/images/flags/"~locale.locale~".png")}}"/></span>#}
				<i class="fa fa-picture fa-3x"></i>
			</div>
		</a>
	</li>
	{% endfor %}
</ul>
