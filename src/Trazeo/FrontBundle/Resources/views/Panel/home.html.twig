{% extends 'TrazeoFrontBundle:Panel:base.html.twig' %}

{% block body_content %}
    <!-- START Bootstrap row -->
	<div class="row">

        <!-- START currentGroups -->
        <div class="col-lg-12 currentGroups alert alert-success">
        	<div class="col-md-1">
        		<i class="fa fa-5x fa-clock-o"></i>
        	</div>
        	<div class="col-md-11">
					<h3>Hay grupos en marcha</h3>
					<p>Los siguientes grupos están en marcha y tienes ninos apuntados en ellos:</p>
					<ul class="col-md-3">
						<li><i class="fa fa-group"></i> Grupo 1</li>
						<li><i class="fa fa-group"></i> Grupo 2</li>
					</ul>
					<ul class="col-md-3">
						<li><i class="fa fa-mail-forward"></i> Ir al grupo</li>
					<li><i class="fa fa-mail-forward"></i> Ir al grupo</li>
					</ul>
			</div>
        </div>
        <!-- END currentGropus -->

        <!-- START Resume -->
			<div class="col-md-12 resume">
				<h2 class="col-md-12  alert alert-warning"><i class="fa fa-cogs"></i>&nbsp; Panel de control</h2>

				<!-- START resumeChilds -->
				<div class="col-md-12 resumeChilds well">
				{% if childs|length <= 0 %}
					<div>
						<i class="fa fa-user fa-5x pull-left alert-warning"></i>
						<h4 class="alert alert-warning">
						Aún no has registrado a ninguno de tus niños
						&nbsp;&nbsp;
						<a class="btn btn-warning btn-outline" href="{{ path('panel_child_new') }}"><i class="fa fa-hand-o-right"></i> Añadir niño a Trazeo</a>
						</h4>
					</div>
				{% elseif childs|length > 0 %}
					<div class="col-md-10">
						<h4 class="alert alert-success">Mis Niños <i style="margin-top:-5px;" class="btn btn-success btn-circle pull-right">{{ childs.count }}</i></h4>
						<div class="alert alert-warning">
							<table class="table">
								<thead>
									<tr>
										<th><i class="fa fa-user"></i></th>
										<th>Nombre</th>
										<th>Opciones</th>
									</tr>
								</thead>
							        <tbody>
							        {% for child in childs %}
							            <tr>
							                <td>&nbsp;</td>
							                <td>{{ child.nick }}</td>
							                <td>
												<i class="fa fa-pencil"></i> <a href="{{ path('panel_child_edit', {'id': child.id}) }}">Editar</a>
												&nbsp;<i class="fa fa-trash-o"></i> <a style="cursor:pointer;" data-href="{{ path('panel_child_delete', {'id': child.id }) }}" data-toggle="confirmation">Eliminar</a>
							                </td>
							            </tr>
							        {% endfor %}
							        </tbody>
							</table>
						</div>
					</div>
					<div class="col-md-2">
						<h5 class="alert alert-success text-center"><i class="fa fa-user"></i>&nbsp; Registrar niño</h5>
						<a href="{{ path('panel_child_new') }}" class="col-md-offset-3">
							<button type="button" class="btn btn-success btn-circle btn-outline btn-xl">
									<i class="fa fa-plus"></i>
							</button>
						</a>
					</div>				
				{% endif %}

				</div>
				<!-- END resumeChilds -->
				
				<!-- START resumeGroups -->
				<div class="col-md-12 resumeGroups well">
			{% if groups|length <= 0 %}
					<div>
						<i class="fa fa-users fa-5x pull-left alert-warning"></i>
						<h4 class="alert alert-warning">
						Crear un nuevo grupo para recuperar el camino al cole a pie
						&nbsp;&nbsp;
						<a class="btn btn-warning btn-outline" href="{{ path('panel_group_new') }}"><i class="fa fa-hand-o-right"></i> Crear un grupo</a>
						</h4>
					</div>
				{% elseif groups|length > 0 %}
					<div class="col-md-10">
						<h4 class="alert alert-success">Mis Grupos <i style="margin-top:-5px;" class="btn btn-success btn-circle pull-right">{{ groups.count }}</i></h4>
						<div class="alert alert-warning">
							<table class="table">
								<thead>
									<tr>
										<th><i class="fa fa-users"></i></th>
										<th>Nombre</th>
										<th>Opciones</th>
									</tr>
								</thead>
							        <tbody>
							        {% for group in groups %}
							            <tr>
							                <td>&nbsp;</td>
							                <td>{{ group.name }}</td>
							                <td>
												<i class="fa fa-pencil"></i> <a href="{{ path('panel_group') }}{{ group.id }}/edit">Editar</a>
												&nbsp;<i class="fa fa-trash-o"></i> <a style="cursor:pointer;" data-href="{{ path('panel_group_delete', {'id': group.id }) }}" data-toggle="confirmation"" >Eliminar</a>
							                </td>
							            </tr>
							        {% endfor %}
							        </tbody>
							</table>
						</div>
					</div>

					<div class="col-md-2">
						<h5 class="alert alert-success text-center"><i class="fa fa-users"></i>&nbsp; Crear grupo</h5>
						<a href="{{ path('panel_group_new') }}" class="col-md-offset-4">
							<button type="button" class="btn btn-success btn-circle btn-outline btn-lg">
									<i class="fa fa-plus"></i>
							</button>
						</a>
						<br /><br /><br />
						<a href="{{ path('panel_group') }}">
							<button class="btn btn-success btn-block btn-sm text-center">
									<i class="fa fa-search"></i>&nbsp; Buscar grupo
							</button>
						</a>
					</div>
					{% endif %}
				</div>
				<!-- END resumeGroups -->	
				
				<!-- START resumeGroups -->
				<div class="col-md-12 resumeGroups well">
				{% if routes|length <= 0 %}
					<div>
						<i class="fa fa-location-arrow fa-5x pull-left alert-warning"></i>
						<h4 class="alert alert-warning">
						Crea una nueva ruta en tu ciudad
						&nbsp;&nbsp;
						<a class="btn btn-warning btn-outline" href="{{ path('panel_route_new') }}"><i class="fa fa-hand-o-right"></i> Definir nueva ruta</a>
						</h4>
					</div>
				{% elseif routes|length > 0 %}
					<div class="col-md-10">
						<h4 class="alert alert-success">Mis Rutas <i style="margin-top:-5px;" class="btn btn-success btn-circle pull-right">{{ routes.count }}</i></h4>
						<div class="alert alert-warning">
							<table class="table">
								<thead>
									<tr>
										<th><i class="fa fa-location-arrow"></i></th>
										<th>Nombre</th>
										<th>Opciones</th>
									</tr>
								</thead>
							        <tbody>
							        {% for route in routes %}
							            <tr>
							                <td>&nbsp;</td>
							                <td>{{ route.name }}</td>
							                <td>
												<i class="fa fa-pencil"></i> <a href="{{ path('panel_route_edit', {'id': route.id }) }}">Editar</a>
												&nbsp;<i class="fa fa-trash-o"></i> <a style="cursor:pointer;" data-href="{{ path('panel_route_delete', {'id': route.id }) }}" data-toggle="confirmation">Eliminar</a>
							                </td>
							            </tr>
							        {% endfor %}
							        </tbody>
							</table>
						</div>
					</div>

					<div class="col-md-2">
						<h5 class="alert alert-success text-center"><i class="fa fa-location-arrow"></i>&nbsp; Crear ruta</h5>
						<a href="{{ path('panel_group_new') }}" class="col-md-offset-4">
							<button type="button" class="btn btn-success btn-circle btn-outline btn-lg">
									<i class="fa fa-plus"></i>
							</button>
						</a>
						<br /><br /><br />
						<a href="{{ path('panel_route') }}">
							<button class="btn btn-success btn-block btn-sm text-center">
									<i class="fa fa-search"></i>&nbsp; Buscar ruta
							</button>
						</a>
					</div>
					{% endif %}
				</div>
				<!-- END resumeRoutes -->			

				
			</div>
			<!-- END Resume -->

    </div>
    <!-- END Bootstrap row -->
{% endblock %}

{% block js %} {{ parent() }} 
	{% include 'SopinetFlashMessagesBundle:Messages:notification.html.twig' %} 
{% endblock %}