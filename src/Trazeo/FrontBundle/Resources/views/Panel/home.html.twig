{% extends 'TrazeoFrontBundle:Panel:base.html.twig' %}

{% block body_content %}
    <!-- START Bootstrap row -->
	<div class="row">

        <!-- START currentGroups -->
        <div class="col-lg-12 currentGroups alert alert-success">
        	<div class="col-md-1">
        		<i class="fa fa-5x fa-clock-o"></i>
        	</div>
        	<div class="col-md-11">
					<h3>Hay grupos en marcha</h3>
					<p>Los siguientes grupos est치n en marcha y tienes ninos apuntados en ellos:</p>
					<ul class="col-md-3">
						<li><i class="fa fa-group"></i> Grupo 1</li>
						<li><i class="fa fa-group"></i> Grupo 2</li>
					</ul>
					<ul class="col-md-3">
						<li><i class="fa fa-mail-forward"></i> Ir al grupo</li>
					<li><i class="fa fa-mail-forward"></i> Ir al grupo</li>
					</ul>
			</div>
        </div>
        <!-- END currentGropus -->
        
        <!-- START Buttons -->
        <div class="col-md-12">
        	<p class="col-md-2"><a class="btn btn-primary btn-outline" href="{{ app.request.getBaseURL() }}/panel/groups"><i class="fa fa-user"></i> Unirme a un grupo</a></p>
        	<p class="col-md-2"><a class="btn btn-primary btn-outline" href="{{ app.request.getBaseURL() }}/panel/routes"><i class="fa fa-location-arrow"></i> Buscar una ruta</a></p>
        </div>
        <!-- END Buttons -->

        <!-- START Resume -->
			<div class="col-md-12 resume">
				<h2 class="col-md-12  alert alert-warning">Mi Resumen</h2>
				
				<!-- START resumeChilds -->
				<div class="col-md-12 resumeChilds well">
					<div class="col-md-10">
						<h4 class="alert alert-info">Mis Ni침os <i class="btn btn-info btn-circle pull-right">{{ children.count }}</i></h4>
						<div class="alert alert-warning">
							<table class="table">
								<thead>
									<tr>
										<th><i class="fa fa-user"></i></th>
										<th>Nombre</th>
										<th>Opciones</th>
									</tr>
								</thead>
							        <tbody>
							        {% for child in children %}
							            <tr>
							                <td>&nbsp;</td>
							                <td>{{ child.nick }}</td>
							                <td>
												<i class="fa fa-pencil"></i> <a href="{{ path('panel_children') }}{{ child.id }}/edit">Editar</a>
												&nbsp;<i class="fa fa-trash-o"></i> <a data-href="{{ path('panel_children_delete', {'id': child.id }) }}" data-toggle="confirmation">Eliminar</a>
							                </td>
							            </tr>
							        {% endfor %}
							        </tbody>
							</table>
						</div>
					</div>

					<div class="col-md-2">
						<h5 class="alert alert-info text-center">Crear ni침o</h5>
							<div class="row">
								<div class="col-lg-12 text-center">
								<a href="{{ app.request.getBaseURL() }}/panel/children/new">
									<button type="button" class="btn btn-info btn-circle btn-md">
											<i class="fa fa-plus"></i>
									</button>
								</a>
								</div>
							</div>
							&nbsp;
						<h5 class="alert alert-info text-center">Buscar ni침o</h5>
							<div class="row">
								<div class="col-lg-12 text-center">
								<a href="{{ app.request.getBaseURL() }}/panel/children">
									<button type="button" class="btn btn-info btn-circle btn-md">
											<i class="fa fa-search"></i>
									</button>
								</a>
								</div>
							</div>
					</div>
				</div>
				<!-- END resumeChilds -->
				
				<!-- START resumeGroups -->
				<div class="col-md-12 resumeGroups well">
					<div class="col-md-10">
						<h4 class="alert alert-info">Mis Grupos <i class="btn btn-info btn-circle pull-right">{{ groups.count }}</i></h4>
						<div class="alert alert-warning">
							<table class="table">
								<thead>
									<tr>
										<th><i class="fa fa-users"></i></th>
										<th>Nombre</th>
										<th>Opciones</th>
									</tr>
								</thead>
							        <tbody>
							        {% for groups in groups %}
							            <tr>
							                <td>&nbsp;</td>
							                <td>{{ groups.name }}</td>
							                <td>
												<i class="fa fa-pencil"></i> <a href="{{ path('panel_groups') }}{{ groups.id }}/edit">Editar</a>
												&nbsp;<i class="fa fa-trash-o"></i> <a data-href="{{ path('panel_groups_delete', {'id': groups.id }) }}" data-toggle="confirmation">Eliminar</a>
							                </td>
							            </tr>
							        {% endfor %}
							        </tbody>
							</table>
						</div>
					</div>

					<div class="col-md-2">
						<h5 class="alert alert-info text-center">Crear Grupo</h5>
							<div class="row">
								<div class="col-lg-12 text-center">
								<a href="{{ app.request.getBaseURL() }}/panel/groups/new">
									<button type="button" class="btn btn-info btn-circle btn-md">
											<i class="fa fa-plus"></i>									
									</button>
								</a>
								</div>
							</div>
							&nbsp;
						<h5 class="alert alert-info text-center">Buscar Grupo</h5>
							<div class="row">
								<div class="col-lg-12 text-center">
								<a href="{{ app.request.getBaseURL() }}/panel/groups">
									<button type="button" class="btn btn-info btn-circle btn-md">
											<i class="fa fa-search"></i>
									</button>
									</a>
								</div>
							</div>
					</div>
				</div>
				<!-- END resumeGroups -->	
				
				<!-- START resumeGroups -->
				<div class="col-md-12 resumeGroups well">
					<div class="col-md-10">
						<h4 class="alert alert-info">Mis Rutas <i class="btn btn-info btn-circle pull-right">{{ routes.count }}</i></h4>
						<div class="alert alert-warning">
							<table class="table">
								<thead>
									<tr>
										<th><i class="fa fa-location-arrow"></i></th>
										<th>Nombre</th>
										<th>Opciones</th>
									</tr>
								</thead>
							        <tbody>
							        {% for routes in routes %}
							            <tr>
							                <td>&nbsp;</td>
							                <td>{{ routes.name }}</td>
							                <td>
												<i class="fa fa-pencil"></i> <a href="{{ path('panel_routes') }}{{ routes.id }}/edit">Editar</a>
												&nbsp;<i class="fa fa-trash-o"></i> <a data-href="{{ path('panel_routes_delete', {'id': routes.id }) }}" data-toggle="confirmation">Eliminar</a>
							                </td>
							            </tr>
							        {% endfor %}
							        </tbody>
							</table>
						</div>
					</div>

					<div class="col-md-2">
						<h5 class="alert alert-info text-center">Crear Ruta</h5>
							<div class="row">
								<div class="col-lg-12 text-center">
								<a href="{{ app.request.getBaseURL() }}/panel/routes/new">
									<button type="button" class="btn btn-info btn-circle btn-md">
											<i class="fa fa-plus"></i>									
									</button>
								</a>
								</div>
							</div>
							&nbsp;
						<h5 class="alert alert-info text-center">Buscar Ruta</h5>
							<div class="row">
								<div class="col-lg-12 text-center">
								<a href="{{ app.request.getBaseURL() }}/panel/routes">
									<button type="button" class="btn btn-info btn-circle btn-md">
											<i class="fa fa-search"></i>
									</button>
									</a>
								</div>
							</div>
					</div>
				</div>
				<!-- END resumeRoutes -->			

				
			</div>
			<!-- END Resume -->

    </div>
    <!-- END Bootstrap row -->
    
{% endblock %}