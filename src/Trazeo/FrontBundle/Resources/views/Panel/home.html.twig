{% extends 'TrazeoFrontBundle:Panel:base.html.twig' %}

{% block body_content %}
    <!-- START Bootstrap row -->
	<div class="row">

        <!-- START currentGroups -->
        <div class="col-lg-12 currentGroups alert alert-info">
        	<div class="col-md-1">
        		<i class="fa fa-5x fa-clock-o"></i>
        	</div>
        	<div class="col-md-11">
					<h3>Hay grupos en marcha</h3>
					<p>Los siguientes grupos están en marcha y tienes ninos apuntados en ellos:</p>
					<ul class="col-md-3">
						<li><i class="fa fa-group"></i> Grupo 1</li>
						<li><i class="fa fa-group"></i> Grupo 2</li>
					</ul>
					<ul class="col-md-3">
						<li><i class="fa fa-mail-forward"></i> Ir al grupo</li>
					<li><i class="fa fa-mail-forward"></i> Ir al grupo</li>
					</ul>
			</div>
        </div>
        <!-- END currentGropus -->
        
        <!-- START Buttons -->
        <div class="col-md-12">
        	<p class="col-md-2"><a class="btn btn-primary btn-outline" href="{{ app.request.getBaseURL() }}/panel/groups"><i class="fa fa-user"></i> Unirme a un grupo</a></p>
        	<p class="col-md-2"><a class="btn btn-primary btn-outline" href="{{ app.request.getBaseURL() }}/panel/routes"><i class="fa fa-location-arrow"></i> Buscar una ruta</a></p>
        </div>
        <!-- END Buttons -->

        <!-- START Resume -->
			<div class="col-md-12 resume">
				<h2 class="col-md-12  alert alert-warning">Mi Resumen</h2>
				
				<!-- START resumeChilds -->
				<div class="col-md-12 resumeChilds well">
					<div class="col-md-6">
						<h4 class="alert alert-info">Niños</h4>
						<div class="alert alert-warning">

							{% if children.count == 0 %}
								<p>Aún no tienes niños dados de alta.</p>
							{% elseif children.count == 1 %}
								<p>Tienes 1 niño dado de alta:</p>
							{% else %}
								<p>Tienes {{ children.count }} niños dados de alta:</p>
							{% endif %}

	 						<ul>

					 			{% for child in children %}
					 				<li>{{ child.Nick }}</li>
								{% endfor %}

	 						</ul>
						</div>
					</div>

					<div class="col-md-6">
						<h5 class="alert alert-info"><i class="fa fa-plus"></i> <a href="{{ app.request.getBaseURL() }}/panel/children/new">Añadir niño</a></h5>
						<div class="alert alert-warning">
 						<ul>
								<li>&nbsp;</li>
							{% for child in children %}
				 				<li>
				 					<i class="fa fa-pencil"></i> <a href="{{ path('panel_children') }}{{ child.id }}/edit">Editar</a>
				 					<i class="fa fa-trash-o"></i> <a data-href="{{ path('panel_children_delete', {'id': child.id }) }}" data-toggle="confirmation">Eliminar</a>
				 				</li>
							{% endfor %}

 						</ul>
						</div>
					</div>
				</div>
				<!-- END resumeChilds -->
				
				<!-- START resumeGroups -->
				<div class="col-md-12 resumeGroups well">
					<div class="col-md-6">
						<h4 class="alert alert-info">Grupos</h4>
						<div class="alert alert-warning">

	 						{% if groups.count == 0 %}
								<p>Aún no has creado ningún grupo.</p>
							{% elseif groups.count == 1 %}
								<p>Tienes creado 1 grupo:</p>
							{% else %}
								<p>Tienes creados {{ groups.count }} grupos:</p>
							{% endif %}

	 						<ul>

					 			{% for group in groups %}
					 				<li>{{ group.Name }}</li>
								{% endfor %}

	 						</ul>
						</div>
					</div>

					<div class="col-md-6">
						<h5 class="alert alert-info">
							<i class="fa fa-users"></i> <a href="{{ app.request.getBaseURL() }}/panel/groups">Buscar Grupos</a> &nbsp; <i class="fa fa-plus"></i> <a href="{{ app.request.getBaseURL() }}/panel/groups/new">Crear Grupo</a>
						</h5>
						<div class="alert alert-warning">
	 						<ul>

	 							{% for group in groups %}
					 				<li><i class="fa fa-pencil"></i> <a href="{{ app.request.getBaseURL() }}/panel/groups/{{ group.id }}/edit">Editar</a>
								{% endfor %}

	 						</ul>
						</div>
					</div>
				</div>
				<!-- END resumeGroups -->
				
				<!-- START resumeRoutes -->
				<div class="col-md-12 resumeRoutes well">
					<div class="col-md-6">
						<h4 class="alert alert-info">Rutas</h4>
						<div class="alert alert-warning">
 						
 							{% if routes.count == 0 %}
								<p>Aún no has creado ninguna ruta.</p>
							{% elseif routes.count == 1 %}
								<p>Tienes creada 1 ruta:</p>
							{% else %}
								<p>Tienes creadas {{ routes.count }} rutas:</p>
							{% endif %}
 						
 						<ul>

				 			{% for route in routes %}
				 				<li>{{ route.name }} <span style="float:right;"></span></li>
							{% endfor %}

 						</ul>
						</div>
					</div>

					<div class="col-md-6">
						<h5 class="alert alert-info">
							<i class="fa fa-location-arrow"></i> <a href="{{ app.request.getBaseURL() }}/panel/routes">Buscar Rutas</a> &nbsp; <i class="fa fa-plus"></i> <a href="{{ app.request.getBaseURL() }}/panel/routes/new">Crear Ruta</a>
						</h5>
						<div class="alert alert-warning">
	 						<ul>

	 							{% for route in routes %}
	 								<li><i class="fa fa-pencil"></i> <a href="{{ app.request.getBaseURL() }}/panel/routes/{{ route.id }}/edit">Editar</a></li>
	 							{% endfor %}

	 						</ul>
						</div>
					</div>
				</div>
				<!-- END resumeRoutes -->
				
			</div>
			<!-- END Resume -->

    </div>
    <!-- END Bootstrap row -->
    
{% endblock %}