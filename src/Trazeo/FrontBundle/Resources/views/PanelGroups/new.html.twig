{% set activeMenu = "groups" %}
{% set pageheader_title = "Groups.new.title"|trans %}
{% set pageheader_description = "Groups.new.description"|trans %}
{% extends 'TrazeoFrontBundle:Panel:base.html.twig' %}

		{% block body_content %}
			<div class="row">
                <div class="col-lg-12">
                	<h4 class="alert alert-success"><i class="fa fa-users"></i>&nbsp; {{ "Groups.new.new"|trans }}</h4>
                </div>
                <div class="col-lg-12 alert alert-warning">
    				{{ form(form) }}
            	</div>
            <div class="modal fade" id="newRouteModal" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content panel-warning">
                        <div class="modal-header panel-heading">
                         <h4 style="color: black" class="modal-title" id="myModalLabel">{{"Groups.newRouteModal.title"|trans}}</h4>
                        </div>
                        <div class="modal-body">
                            <h3>{{"Groups.newRouteModal.title"|trans}}</h3>
                        </div>
                        <div class="modal-footer">
                            <button id="now" type="button" class="btn btn-success" data-dismiss="modal">{{"Groups.newRouteModal.now"|trans}}
                            </button>
                            <button id="later" type="button" class="btn btn-default" data-dismiss="modal">{{"Group.cantModal.later"|trans}}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
		{% endblock %}
        {% block js %} {{ parent() }} 
            <script> 
                $( "form" ).submit(function(event) {
                    $("#newRouteModal").modal('show');
                    event.preventDefault();
                });
                $( "#now" ).click(function(event) {
                    $("#trazeo_basebundle_group_hasRide").val(1);
                    $( "form").unbind();
                    $( "form" ).submit();
                });  
                $( "#later" ).click(function(event) {
                    $("#trazeo_basebundle_group_hasRide").val(0);
                    $( "form").unbind();
                    $( "form" ).submit();
                });            
            </script>
        {% endblock %}