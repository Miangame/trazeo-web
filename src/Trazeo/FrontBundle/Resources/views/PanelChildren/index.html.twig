{% set activeMenu = "children" %}
{% set pageheader_title = "Children.index.title"|trans %}
{% set pageheader_description = "Children.index.description"|trans %}
{% extends 'TrazeoFrontBundle:Panel:base.html.twig' %}

		{% block body_content %}               

        <div class="col-lg-12 alert alert-info">
        	<div class="col-md-1">
        		<i class="fa fa-5x fa-user"></i>
        	</div>
        	<div class="col-md-10">
				<h4>Listado de tus ni√±os</h4>
					<div class="input-group custom-search-form col-md-4">
						<input type="search" class="form-control" placeholder='{{ "Trans.search.children"|trans }}'/>
						<span class="input-group-btn">
						<button class="btn btn-primary" type="button"><i class="fa fa-search"></i></button>
						</span>				
					</div>
			</div>
        </div><!-- END col-lg-12 alert alert-info -->
		
		
	{% for children in childrens %}
		<div class="panel-group" id="accordion">
			<div class="panel panel-warning">
				<div class="panel-heading">
		        	<h4 class="panel-title">
		            	<a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ children.id }}">{{ children.nick }}<div class="pull-right"><i class="btn btn-warning btn-circle">{{ children.userextendchildren|length }}</i> {{ "Tutores"|trans }}</div></a>
					</h4>
				</div>
				<div id="collapse{{ children.id }}" class="panel-collapse collapse in">
					<div class="panel-body">
						<ul>
							<li>
							<i class="fa fa-sitemap"></i>
								<b>Tutores: </b>
									<ul>
									{% for childrenUsers in children.userextendchildren %}
										<li><i class="fa fa-angle-right"></i> {{ childrenUsers.nick }}</li>
										{% endfor %} 
									</ul>							
							</li>
							<li>
							<i class="fa fa-users"></i>
								<b>Grupos: </b>
									<ul>
									{% for childrenGroups in children.groups %}
										<li><i class="fa fa-angle-right"></i> {{ childrenGroups.name }}</li>
										{% endfor %} 
									</ul>							
							</li>
							<li>
							<i class="fa fa-star"></i>
								<b>Sexo: </b>{{ children.sex }} 
							</li>
							<li>
							<i class="fa fa-calendar-o"></i>
								<b>Fecha de nacimiento: </b>{{ children.datebirth |date("d/m/Y") }} 
							</li>
							<li>
							<i class="fa fa-eye"></i>
								<b>Visibilidad: </b>{{ children.visibility }}
							</li>
						</ul>
					</div> {# END .panel-body #}
				</div>{# END #collapse #}
			</div>
		</div>
	{% endfor %}
		
		
		{% endblock %}
		
