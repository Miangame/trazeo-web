<!-- Se podría mirar una forma más elegante de aplicar estos mínimos estilos -->
<style>
.tab-content {
    border-left: 1px solid #ddd;
    border-right: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    padding: 20px;
}

.nav-tabs { margin-bottom: -1px; }
</style>
<div class="row-fluid">
	<!--PAGE CONTENT BEGINS HERE-->
	<form class="form-horizontal" action="{{ path('panel_user_live_save') }}" method="POST"/>
		<div class="tabbable">
			<ul class="nav nav-tabs" id="live_tab">
				<li class="active">
					<a data-toggle="tab" href="#live_tab">
						{{ ("preference.live")|trans }}
					</a>
				</li>
			</ul>
			
			<div class="tab-content">
				<div id="live_tab" class="fade tab-pane in active">
					<div class="row-fluid">
						<span class="span7">{{ ("preference."~setting)|trans }}</span>
						<span class="span5">
								<div class="control-group">
									<div class="controls">
										{% for setting in settings %}
										<label>
											<input type="checkbox" value="option1" id="inlineCheckbox1">
											<input {% if (app.user.sopinetuserextend|getUserLiveValueFilter()) == setting %}checked="checked" {% endif %}name="setting_{{ setting }}" type="checkbox" class="ace" value="{{ setting }}"/>
												<span class="lbl">{{ ("preference."~setting)|trans }}</span>
										</label>
										{% endfor %}
										</div>
									</div>
						</span>
					</div>
				</div>
				{% set i = i + 1 %}
				{% endfor %}
			</div>
	
		<br />
		<div class="row-fluid">
			<button class="btn btn-success" type="submit">
				<i class="fa fa-save"></i>&nbsp;
				{{ "Btn.success"|trans }}
			</button>
		</div>
	
	</form>
</div>