<!-- START Modal definition -->
<div id="notificationModal" class="modal fade notificationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
    	<div class="modal-content">
        	<div class="modal-header">
          	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">{{"Notifications.modal.close"|trans |raw}}</span></button>
	          <h4 class="modal-title" id="myModalLabel">{{"Notifications.modal.title"|trans |raw}}</h4>
   			</div>
 			<div class="modal-body">
				{{ notification|parseSopinetUserNotification() }}
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default dismissModal" data-dismiss="modal" data-notId="{{ notification.id}}">{{"Notifications.modal.dismiss"|trans |raw}}</button>
			</div>

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div>
<!-- END Modal definition -->
